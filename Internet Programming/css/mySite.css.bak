{
	appearance: none;
	width: 15px;
	height: 15px;
	border-radius: 50%;
	background-clip: content-box;
	border: 2px solid grey;
	background-color: grey;
}
input[type="radio"]:checked
{
	background-color:green;
}
input[type="checkbox"]
{
	appearance: none;
	width: 15px;
	height: 15px;
	border: 2px solid grey;
	background-color:grey;
}
input[type="checkbox"]:checked
{
	background-color:blue;
}

